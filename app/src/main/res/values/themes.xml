<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EldarWallet" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_color_44</item>
        <item name="colorPrimaryVariant">@color/theme_color_00</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_color_44</item>
        <item name="colorSecondaryVariant">@color/theme_color_00</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="ma_title">
        <item name="android:background">@color/theme_color_00</item>
        <item name="android:textSize">35sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/theme_color_11</item>
        <item name="android:fontFamily">@font/palanquin_dark_semibold</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:shadowColor">@color/theme_color_11</item>
    </style>

    <style name="la_title">
        <item name="android:gravity">center</item>
        <item name="android:textSize">35sp</item>
        <item name="fontFamily">@font/palanquin_dark_semibold</item>
        <item name="android:textColor">@color/theme_color_11</item>
        <item name="android:shadowColor">@color/theme_color_11</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="la_textview">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/theme_color_33</item>
        <item name="android:shadowColor">@color/theme_color_33</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="la_edittext">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/theme_color_22</item>
    </style>

    <style name="bf_balance_uppertxt">
        <item name="android:gravity">left|center</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:fontFamily">@font/palanquin_dark_semibold</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/theme_color_11</item>
    </style>

    <style name="bf_balance">
        <item name="android:gravity">left|center</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginTop">-10dp</item>
        <item name="android:fontFamily">@font/palanquin_dark_semibold</item>
        <item name="android:textSize">35dp</item>
        <item name="android:textColor">@color/theme_color_11</item>
        <item name="android:shadowColor">@color/theme_color_11</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="bf_creditcard_uppertxt">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:fontFamily">@font/palanquin_dark_semibold</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/theme_color_00</item>
    </style>

    <style name="bf_creditcard_number">
        <item name="android:gravity">left|center</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:fontFamily">@font/palanquin_dark_semibold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/theme_color_22</item>
    </style>

    <style name="nf_textview">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/palanquin_dark_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/theme_color_33</item>
    </style>

    <style name="nf_edittext">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/theme_color_22</item>
        <item name="android:ems">10</item>
        <item name="android:maxLength">16</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="nf_textview_cardbrand">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/theme_color_44</item>
        <item name="android:shadowColor">@color/theme_color_44</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="pf_textview">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/palanquin_dark_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/theme_color_33</item>
    </style>

    <style name="pf_edittext">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/theme_color_22</item>
        <item name="android:ems">10</item>
        <item name="android:maxLength">10</item>
    </style>

</resources>